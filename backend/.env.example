# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=5000

# JWT Secret (Generate a strong random string)
JWT_SECRET="your_jwt_secret_here_generate_random_string"

# Database Connection
# For Supabase: postgresql://postgres.[PROJECT_ID]:[PASSWORD]@[HOST]:6543/postgres
# For Local PostgreSQL: postgresql://username:password@localhost:5432/erasmusly
DATABASE_URL="postgresql://user:password@host:port/database"

# Frontend URL for CORS
# Production: https://your-vercel-app.vercel.app
# Development: http://localhost:5173
FRONTEND_URL="http://localhost:5173"

# Database Seeding
# Set to 'true' only when you want to seed/reset the database
# WARNING: This will delete all existing data!
SEED=false
